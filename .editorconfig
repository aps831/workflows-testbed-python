root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2

[*.xml]
indent_size = 2

[*.{tf,tfvars,hcl}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2

[*.{js,jsx,ts,cjs,mjs}]
indent_size = 2

[*.css]
indent_size = 2

[*.py]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
